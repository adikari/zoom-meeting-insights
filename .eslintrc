extends:
  - airbnb-base
  - prettier
  - plugin:import/errors
  - plugin:import/warnings
  - plugin:jest/recommended

globals:
  Atomics: readonly
  SharedArrayBuffer: readonly

parserOptions:
  ecmaVersion: 2020
  sourceType: module

plugins:
  - jest
  - prettier

rules: {
  "prettier/prettier": "error",
  "import/prefer-default-export": 0,
  "jest/no-focused-tests": 0
}
